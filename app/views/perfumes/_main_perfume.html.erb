<div class="main_wrapper">
  <% if user_signed_in? %>
    <div class="greeting">
      Hello,
        <%= link_to "#{current_user.name}!", "/users/#{current_user.id}", class: :greeting_link %>
    </div>
  <% end %>
  <div class="new_collection_logo">
    New collection
  </div>
  <% if user_signed_in? %>
  <%= link_to(new_perfume_path, class: "lineup_btn") do %>
    <span class="lineup_btn_text">Line up</span>
    <%= image_tag 'icon_perfume.png', size: '185x50' ,class: "lineup_btn_icon" %>
  <% end %>
<% else %>
  <%= link_to(new_user_session_path, class: "lineup_btn") do %>
    <span class="lineup_btn_text">Line up</span>
    <%= image_tag 'icon_perfume.png', size: '185x50' ,class: "lineup_btn_icon" %>
  <% end %>
<% end %>
</div>